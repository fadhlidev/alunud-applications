      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "ZakatPayer": {
        "description": "A person or a representative of several people or families who are obliged to pay zakat fitrah",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "1c29dd29-9577-4d8b-91b7-9f1aae4a5b92"
          },
          "name": {
            "type": "string",
            "example": "Fulan"
          },
          "address": {
            "type": "string",
            "example": "Pojok 2/3"
          },
          "submittedTime": {
            "type": "integer",
            "example": 1681893000000
          },
          "zakat": {
            "type": "object",
            "properties": {
              "totalPeople": {
                "type": "integer",
                "example": 4
              },
              "totalAmount": {
                "type": "integer",
                "example": 11
              },
              "excessAmount": {
                "type": "integer",
                "example": 1
              },
              "lessAmount": {
                "type": "integer",
                "example": 0
              },
              "excessAmountReturned": {
                "type": "boolean",
                "example": false
              }
            }
          }
        }
      }
    }
  }
}
