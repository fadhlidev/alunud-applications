                    },
                    "error": {
                      "type": "string",
                      "example": "Zakat fitrah payer (1c29dd29-9577-4d8b-91b7-9f1aae4a5b92) not found"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Zakat Fitrah Edition Payer",
        "parameters": [
          {
            "in": "path",
            "name": "year",
            "schema": {
              "type": "integer",
              "example": 2023
            },
            "required": true,
            "description": "Year of Zakat fitrah edition"
          },
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string",
              "example": "1c29dd29-9577-4d8b-91b7-9f1aae4a5b92"
            },
            "required": true,
            "description": "ID of Zakat fitrah payer"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "nullable": true,
                    "example": "Fulan"
                  },
                  "address": {
                    "type": "string",
                    "nullable": true,
                    "example": "Pojok 2/3"
                  },
                  "totalPeople": {
                    "type": "integer",
                    "nullable": true,
                    "minimum": 1,
                    "example": 4
                  },
                  "totalAmount": {
                    "type": "integer",
                    "nullable": true,
                    "minimum": 2.5,
                    "example": 11
                  },
                  "excessAmountReturned": {
                    "type": "boolean",
                    "nullable": true,
                    "default": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update zakat fitrah edition payer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "SUCCESS_UPDATE_ZAKAT_FITRAH_EDITION_PAYER"
                    },
                    "data": {
                      "$ref": "#/components/schemas/ZakatPayer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Failed to update zakat fitrah edition payer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "FAILED_UPDATE_ZAKAT_FITRAH_EDITION_PAYER"
                    },
